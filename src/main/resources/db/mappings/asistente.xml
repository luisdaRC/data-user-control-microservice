<?xml version="1.0" encoding="UTF-8" ?>

<!-- IntelliJ user, if you see an "Element entity-mappings must be declared", it is a known bug: https://youtrack.jetbrains.com/issue/IDEA-121059 -->

<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <package>co.edu.unicartagena.control.domain</package>

    <entity class="co.edu.unicartagena.control.domain.entities.Asistente">
        <table name="asistente"/>

        <attributes>
            <id name="idAsistente">
                <column name="idasistente"/>
            </id>

            <basic name="idAsamblea">
                <column name="asamblea_idasamblea"/>
            </basic>

            <basic name="idPersona">
                <column name="persona_idpersona"/>
            </basic>

            <basic name="idRepresentado">
                <column name="idrepresentado"/>
            </basic>

            <basic name="rol">
                <column name="rol"/>
            </basic>

            <basic name="horaLlegada">
                <column name="horallegada"/>
            </basic>

            <basic name="horaSalida">
                <column name="horasalida"/>
            </basic>


        </attributes>
    </entity>
</entity-mappings>