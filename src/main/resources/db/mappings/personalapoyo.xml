<?xml version="1.0" encoding="UTF-8" ?>

<!-- IntelliJ user, if you see an "Element entity-mappings must be declared", it is a known bug: https://youtrack.jetbrains.com/issue/IDEA-121059 -->

<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <package>co.edu.unicartagena.control.domain</package>

    <entity class="co.edu.unicartagena.control.domain.entities.PersonalApoyo">
        <table name="personalapoyo"/>

        <attributes>
            <id name="id">
                <column name="idpersonalapoyo"/>
                <generated-value strategy="IDENTITY"/>
            </id>

            <basic name="email">
                <column name="email"/>
            </basic>

            <basic name="pass">
                <column name="pass"/>
            </basic>

            <basic name="estado">
                <column name="estado"/>
            </basic>

            <basic name="rol">
                <column name="rol"/>
            </basic>

            <basic name="nombres">
                <column name="nombres"/>
            </basic>

            <basic name="numeroDocumento">
                <column name="numerodocumento"/>
            </basic>

            <basic name="tipoDocumento">
                <column name="tipodocumento"/>
            </basic>

            <many-to-one name="idPropiedad" target-entity="co.edu.unicartagena.control.domain.entities.PropiedadHorizontal" optional="true">
                <join-column name="propiedadhorizontal_idph" referenced-column-name="idpropiedadhorizontal"/>
            </many-to-one>

        </attributes>
    </entity>
</entity-mappings>
