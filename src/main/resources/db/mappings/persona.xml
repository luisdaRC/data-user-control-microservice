<?xml version="1.0" encoding="UTF-8" ?>

<!-- IntelliJ user, if you see an "Element entity-mappings must be declared", it is a known bug: https://youtrack.jetbrains.com/issue/IDEA-121059 -->

<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    <package>co.edu.unicartagena.control.domain</package>

    <entity class="co.edu.unicartagena.control.domain.entities.Persona">
        <table name="persona"/>

        <attributes>
            <id name="idPersona">
                <column name="idpersona"/>
            </id>

            <basic name="idBienPrivado">
                <column name="bienprivado_idbienprivado"/>
            </basic>

            <basic name="nombres">
                <column name="nombres"/>
            </basic>

            <basic name="apellido">
                <column name="apellidos"/>
            </basic>

            <basic name="tipoDocumento">
                <column name="tipodocumento"/>
            </basic>

            <basic name="numeroDocumento">
                <column name="numerodocumento"/>
            </basic>

            <basic name="rol">
                <column name="rol"/>
            </basic>

            <basic name="moroso">
                <column name="moroso"/>
            </basic>

        </attributes>
    </entity>
</entity-mappings>
